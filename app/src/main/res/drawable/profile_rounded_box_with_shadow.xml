<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- Color de fondo de la vista -->
            <solid
                android:color="#CABBBBBB" >

            </solid>

            <!-- Color y ancho del borde del elemento -->
            <stroke
                android:width="1dp"
                android:color="#CABBBBBB" >
            </stroke>

            <!-- Si queremos añadir algún padding -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"    >
            </padding>

            <!-- Aquí indicamos el radio a aplicar a las esquinas -->
            <corners
                android:radius="50dp"   >
            </corners>

        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="3dp"
        android:top="0dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">

            <!-- Color de fondo de la vista -->
            <solid
                android:color="@color/white" >

            </solid>

            <!-- Color y ancho del borde del elemento -->
            <stroke
                android:width="1dp"
                android:color="@color/white" >
            </stroke>

            <!-- Si queremos añadir algún padding -->
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"    >
            </padding>

            <!-- Aquí indicamos el radio a aplicar a las esquinas -->
            <corners
                android:radius="50dp"   >
            </corners>

        </shape>
    </item>
</layer-list>