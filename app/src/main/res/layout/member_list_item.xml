<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="30dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameDetails"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="26sp"
            android:text="Marina Alapont"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/estrella1Details"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@drawable/ic_starplena">

            </ImageView>

            <ImageView
                android:id="@+id/estrella2Details"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_starplena" />

            <ImageView
                android:id="@+id/estrella3Details"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_starplena" />

            <ImageView
                android:id="@+id/estrella4Details"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_starplena" />

            <ImageView
                android:id="@+id/estrella5Details"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_starplena" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numberValorations"
                android:layout_marginTop="3dp"
                android:layout_marginStart="10dp"
                android:text="(0)"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>